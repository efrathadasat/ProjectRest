@model IEnumerable<ProjectRest.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IdClub)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateForDay)
                </th>
